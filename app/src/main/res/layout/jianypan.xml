<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main"
              android:orientation="vertical">

    <include layout="@layout/title"/>
<ScrollView
    android:layout_width="match_parent"

    android:layout_weight="1"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:padding="12dp"
        >
        <!--1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bill_water"
                />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="电费"
                android:textIsSelectable="true"
                android:textColor="#333333"
                android:textSize="16sp"
                />
        </LinearLayout>
        <!--使用地址-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用地址"
                android:textColor="@color/prefee_title_text_color"
                android:textSize="@dimen/prefee_title_text_size"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京市大兴区亦庄经济技术开发区 "
                    android:textColor="@color/prefee_content_text_color"

                    android:textSize="@dimen/prefee_content_text_size"

                    />

                <TextView
                    android:id="@+id/tv_address_house"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="北京经开.E6创客中心"
                    android:textColor="@color/prefee_content_text_color"

                    android:textSize="@dimen/prefee_content_text_size"

                    />

            </LinearLayout>
        </LinearLayout>

        <!--户名-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="户名"
                android:textColor="@color/prefee_title_text_color"
                android:textSize="@dimen/prefee_title_text_size"
                />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="王单"
                android:textColor="@color/prefee_content_text_color"

                android:textSize="@dimen/prefee_content_text_size"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#C0C4C7"/>
        <!--表号编号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="表号编号"
                android:textColor="@color/prefee_title_text_color"

                android:textSize="@dimen/prefee_title_text_size"
                />

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="235465768657435243"
                android:textColor="@color/prefee_content_text_color"

                android:textSize="@dimen/prefee_content_text_size"

                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#C0C4C7"/>
        <!--购买价格-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买单价"
                android:textColor="@color/prefee_title_text_color"

                android:textSize="@dimen/prefee_title_text_size"
                />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="0.99元/度"
                android:textColor="@color/prefee_content_text_color"

                android:textSize="@dimen/prefee_content_text_size"

                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#C0C4C7"/>
        <!--当前剩余-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前剩余: "
                android:textColor="@color/prefee_title_text_color"

                android:textSize="@dimen/prefee_title_text_size"
                />

            <TextView
                android:id="@+id/tv_remain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="33.23度(kw.h)"
                android:textColor="@color/prefee_content_text_color"

                android:textSize="@dimen/prefee_content_text_size"

                />

            <ImageView
                android:id="@+id/iv_refresh"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="28dp"
                android:src="@drawable/selector_refresh"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#C0C4C7"/>
        <!--请输入购买价格-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm090"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:gravity="center|left"
                android:text="充值金额"
                android:textColor="#333"/>

            <EditText
                android:id="@+id/et_chongmoney"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dm020"
                android:background="@color/transparent"
                android:gravity="center|left"
                android:hint="请输入购买金额"
                android:numeric="decimal"
                android:textColor="@color/gray"
                android:textColorHint="@color/hint_color"
                android:textSize="13sp"/>
        </LinearLayout>
        <!--提示语-->
        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="充值金额不能小于10哦"
            android:textColor="@color/gray"
            android:textSize="13sp"/>


    </LinearLayout>

</ScrollView>
    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"-->
    <!--android:layout_weight="1"/>-->

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dm030"
        android:layout_marginTop="@dimen/dm160"
        android:background="@drawable/btn_blue_back"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/dm020"
        android:text="立即缴费"
        android:textColor="@color/white"/>


    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_weight="99"/>-->
</LinearLayout>