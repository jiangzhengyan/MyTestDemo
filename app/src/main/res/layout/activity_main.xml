<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyaout_fenshi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    android:hapticFeedbackEnabled="true"
    android:orientation="vertical">
     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         >
    <!--<ProgressBar-->
    <!--android:layout_gravity="center_horizontal"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:indeterminate="false"-->
    <!--android:indeterminateDuration="900"-->
    <!--android:indeterminateDrawable="@drawable/anim_7"/>-->


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="anim"
        android:text="dianji"
        />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="水光笔"
        android:background="@drawable/selector_btn_"

        />

    <CheckBox
        android:button="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="水光笔"
        android:checked="true"
        android:padding="8dp"
        android:textColor="@color/white"
        android:background="@drawable/selector_btn_"

        />
 <CheckedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="水光笔"
        android:checked="true"
        android:padding="12dp"
        android:textColor="@color/white"
        android:background="@drawable/selector_btn_"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"


            android:text="00000"
            />

        <TextView
            android:id="@+id/tv_ani"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"

            android:text="你好"
            />
    </LinearLayout>
     </LinearLayout>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="none">


        <LinearLayout
            android:id="@+id/ll_repair_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>

    </HorizontalScrollView>



    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation"/>
    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/gray"
        android:dividerHeight="1dp"
        />

</LinearLayout>
