<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_activity_white">

    <TextView
        android:id="@+id/tv_status"
        android:textSize="18sp"
        android:gravity="center"
        android:text="下载更新"
        android:layout_width="250dp"
        android:layout_height="50dp" />

    <TextView
        android:background="#c2c2c2"
        android:layout_width="250dp"
        android:layout_height="2dp" />
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:paddingTop="15dp">
        <ProgressBar
            android:id="@+id/pb_update"
            android:layout_margin="5dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_totalsize"
            android:textSize="12sp"
            android:layout_margin="3dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_fenge"
            android:layout_toLeftOf="@+id/tv_totalsize"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_nowsize"
            android:textSize="12sp"
            android:layout_margin="3dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/tv_fenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>