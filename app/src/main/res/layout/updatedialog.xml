<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              >

    <RelativeLayout
        android:gravity="center"
        android:layout_width="280dp"
        android:layout_height="400dp">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/update02"/>

        <ImageView
            android:id="@+id/img_text"
            android:layout_width="340dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/update01"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
             />

        <ImageView
            android:id="@+id/iv_donotupdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/iv_bg"
            android:layout_marginRight="-10dp"
            android:background="@drawable/update03" />

        <ScrollView
            android:id="@+id/sv_update_content"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="10dp"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:layout_below="@id/img_text"
            android:fillViewport="true">

            <TextView
                android:id="@+id/tv_update_content"
                android:paddingLeft="45dp"
                android:paddingRight="45dp"
                android:text="XXX版本发布了"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </TextView>

        </ScrollView>

        <Button
            android:id="@+id/btn_update"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/updatebutton"
            android:layout_alignParentBottom="true"
            android:textSize="16sp"
            android:gravity="center"
            android:text="立即升级"
            android:textColor="@color/white" />

    </RelativeLayout>

</LinearLayout>
