<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/pay_bt_add"
            android:textColor="#4c4c4c"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ufcsdk_back" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#999" />
    </RelativeLayout>

    <LinearLayout
        style="@style/QuickAdd"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <TextView
            style="@style/ItemAdd"
            android:text="@string/pay_quick_bank" />

        
        <LinearLayout
            android:id="@+id/ll__add_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/ufcpay_bg_add_banks_list"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_bank_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center_vertical"
                android:padding="7dp"
                android:singleLine="true"
                android:textColor="#272727"
                android:textColorHint="#b9b9b9"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/view_jiantou"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/ufcpay_bg_add_bank_jiantou"
                android:padding="9dp"
                android:src="@drawable/ufcpay_icon_add_bank_jiantou" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/QuickAdd"
        android:layout_marginTop="5dp" >

        <TextView
            style="@style/ItemAdd"
            android:text="@string/pay_quick_number" />

        <EditText
            android:id="@+id/et_bankNumber"
            style="@style/ItemAdd"
            android:background="@drawable/ufcpay_bg_add_banks_list"
            android:hint="@string/pay_tv_bank"
            android:padding="7dp" />
    </LinearLayout>

    <LinearLayout
        style="@style/QuickAdd"
        android:layout_marginTop="5dp" >

        <TextView
            style="@style/ItemAdd"
            android:text="@string/pay_quick_phone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_phoneNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="10"
                android:background="@drawable/ufcpay_bg_add_banks_list"
                android:hint="@string/pay_tv_phone"
                android:inputType="number|phone"
                android:maxLength="11"
                android:padding="7dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/bt_sendCode"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="4"
                android:background="@drawable/ufcsdk_dialog_shape"
                android:gravity="center"
                android:text="@string/pay_tv_send"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/QuickAdd"
        android:layout_marginTop="5dp" >

        <TextView
            style="@style/ItemAdd"
            android:text="@string/pay_quick_verCode" />

        <EditText
            android:id="@+id/et_verNumber"
            style="@style/ItemAdd"
            android:layout_width="match_parent"
            android:background="@drawable/ufcpay_bg_add_banks_list"
            android:digits="1234567890"
            android:hint="@string/pay_tv_input"
            android:maxLength="11"
            android:padding="7dp" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_confirm"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ufcsdk_dialog_shape"
        android:gravity="center"
        android:radius="5dp"
        android:text="@string/pay_bt_confirm"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>