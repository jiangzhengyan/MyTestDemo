<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="NavPage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:background">@drawable/nav_page</item> -->
        <item name="android:background">@color/navpage</item>
    </style>
    
    <style name="QuickAdd">
          <item name="android:layout_width">match_parent</item>
          <item name="android:layout_height">wrap_content</item>
          <item name="android:orientation">vertical</item>
          <item name="android:padding">5dp</item>
    </style>
    
    <style name="ItemAdd">
          <item name="android:layout_width">match_parent</item>
           <item name="android:layout_height">wrap_content</item>
          <item name="android:gravity">center_vertical</item>
           
          <item name="android:textSize">14sp</item>
       
    </style>
     <!-- sdk支付密码对话框样式 -->
    <style name="Theme.Light.Dialog.Light_Dialog_Cus" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
        <!--<item name="android:backgroundDimEnabled">false</item>-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
     <!-- 选择银行卡弹出框,由下至上 -->
    <style name="bank_dialogStyle" parent="@android:style/Animation.Dialog">
        <item name="@android:windowEnterAnimation">@anim/share_popup_in</item>
        <!-- 进入时的动画 -->
        <item name="@android:windowExitAnimation">@anim/share_popup_out</item>
        <!-- 退出时的动画 -->
    </style>
    <!--支付sdk界面的选择的radiobutton-->
    <style name="ufcpayMyRadioButton">
        
        <item name="android:button">@drawable/ufcpay_my_btn_radio</item>
    </style>
</resources>
